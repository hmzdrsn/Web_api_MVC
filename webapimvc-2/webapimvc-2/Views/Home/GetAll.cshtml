@using System.Data
@model DataTable

<h1>GetAll</h1>

@using (Html.BeginForm("GetAll", "Home"))
{
    <input type="text" name="id" placeholder="id">
    <button type="submit" name="btn">Ara</button>

}
<br />
@using (Html.BeginForm("Delete", "Home"))
{
	<input type="text" name="did" placeholder="id">
	<button type="submit">Sil</button>

}
<br />

<table class="table table-striped table-hover table-striped font-weight-bold">
    <tr>
        <td>ID</td>
        <td>Araba Adı</td>
        <td>Açıklama</td>
    </tr>
    @foreach (DataRow row in Model.Rows)
    {
        <tr>
            <td>@row["id"]</td>
            <td>@row["carName"]</td>
            <td>@row["description"]</td>
        </tr>
    }

</table>

