@using System.Data
@model DataTable

<h1>GetById</h1><br />

<table class="table table-striped table-hover table-striped">
    <tr>

        <td>ID</td>
        <td>Araba Adı</td>
        <td>Açıklama</td>
        <td></td></
    </tr>
    @foreach (DataRow row in Model.Rows)
    {
        <tr>
            <td>@row["id"]</td>
            <td>@row["carName"]</td>
            <td>@row["description"]</td>
            <td> <a asp-action="Update"><b>Düzenle</b></a></td>
        </tr>
        
    }

</table>

<div>
    <a asp-action="GetAll"><b>Listeye Dön</b></a>
</div>